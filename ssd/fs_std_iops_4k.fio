# Random 4KB IOPS: 4 workers and each with queue depth 32.

[global]
directory=/mnt/nvme0n1p1
filename=fio_file
ioengine=libaio

direct=0
buffered=1
invalidate=1

blocksize=4K
iodepth=32

randrepeat=0
norandommap

thread
numjobs=4

numa_cpu_nodes=1
numa_mem_policy=bind:1

time_based
ramp_time=30
runtime=256

group_reporting

[rr4k-iops]
readwrite=randread

[rw4k-iops]
stonewall
readwrite=randwrite
